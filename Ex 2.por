programa {
	funcao inicio() {
	
	
	real num
	
	escreva ("Digite um número: ")
	leia (num)
	
	se (num < 0 )
	{
	    
	    escreva ("Número negativo")
	}
	
	se (num > 0 )
	
	{
	    escreva ("Número Positivo")
	
	    
	}	
	
	se (num == 0 )
	
	{
	    
	    escreva ("ZERO")
	    
	}
	
	
	
	
	
	
	
	
	}
}
